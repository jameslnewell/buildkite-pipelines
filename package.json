{
  "name": "@jameslnewell/buildkite-pipelines",
  "version": "2.0.0-preview.0",
  "bin": "dist/cli.js",
  "main": "dist/api.js",
  "files": [
    "dist"
  ],
  "author": "James Newell <gday@jameslnewell.dev>",
  "license": "MIT",
  "packageManager": "pnpm@8.6.6",
  "dependencies": {
    "ajv": "^8.12.0",
    "debug": "^4.3.4",
    "js-yaml": "^4.1.0",
    "prettier": "^2.5.1",
    "resolve": "^1.22.0",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@jameslnewell/jest-preset": "^3.0.0",
    "@jest/types": "^27.5.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.163",
    "@swc/jest": "^0.2.20",
    "@swc/register": "^0.1.10",
    "@types/debug": "^4",
    "@types/eslint": "^8.4.1",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.14",
    "@types/prettier": "^2.4.4",
    "@types/resolve": "^1.20.1",
    "@types/yargs": "^17.0.10",
    "chokidar": "^3.5.3",
    "eslint": "^8.8.0",
    "jest": "^27.5.1",
    "jest-pnp-resolver": "^1.2.2",
    "json-schema-to-typescript": "^13.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "@jameslnewell/jest-preset",
    "resolver": "jest-pnp-resolver"
  },
  "scripts": {
    "check": "yarn run check:types",
    "check:types": "tsc --noEmit",
    "prepare": "yarn run codegen",
    "codegen": "json2ts src/schema/schema.json src/schema/schema.ts",
    "develop": "yarn run build:transpile --watch",
    "build": "yarn run build:types && yarn run build:transpile",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:transpile": "yarn swc src --out-dir dist --source-maps",
    "test": "jest --maxWorkers=1",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  }
}
