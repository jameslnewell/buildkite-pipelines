{
  "name": "@jameslnewell/buildkite-pipelines-cli",
  "version": "3.22.0",
  "bin": "dist/index.js",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "author": "James Newell <gday@jameslnewell.dev>",
  "description": "Generate Buildkite pipelines from code - CLI",
  "keywords": [
    "buildkite",
    "pipelines",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jameslnewell/buildkite-pipelines.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/jameslnewell/buildkite-pipelines/issues"
  },
  "homepage": "https://github.com/jameslnewell/buildkite-pipelines",
  "dependencies": {
    "@jameslnewell/buildkite-pipelines": "workspace:*",
    "debug": "^4.3.4",
    "resolve": "^1.22.0",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.15.1",
    "@types/debug": "^4",
    "@types/node": "^17.0.14",
    "@types/resolve": "^1.20.1",
    "@types/yargs": "^17.0.10",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "check:typing": "tsc --noEmit",
    "build": "pnpm run build:types && pnpm run build:transpile && pnpm run build:files",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:transpile": "swc src --out-dir dist --source-maps --ignore '**/*.test.ts'",
    "build:files": "cpx 'src/**/*.{json,md}' dist"
  },
  "license": "MIT"
}
